# Required
TIDBZERO_HOST=

# Optional (default: /v1alpha1)
# TIDBZERO_BASE_PATH=/v1alpha1

# Optional: reuse an existing activation code
TIDB0_ACTIVATION_CODE=

# Optional request activation-code params (API accepts empty {})
# TIDB0_PURPOSE=codex
# TIDB0_DATABASE_QUOTA=1
# TIDB0_CODE_EXPIRES_AT=2026-12-31T00:00:00Z


# curl timeouts (avoid hanging when host/network is wrong)
# TIDB0_CURL_CONNECT_TIMEOUT=10
# TIDB0_CURL_MAX_TIME=60

# Debug: set to 1 to enable curl -v (may print secrets)
# TIDB0_CURL_VERBOSE=0

# Optional defaults for require-database request
# TIDB0_NAME_PREFIX=codex-
# TIDB0_DB_PASSWORD=
